<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainpagelinearlayout"

        card_view:cardBackgroundColor="#ffe5e2"
        card_view:cardElevation="5dp">
        <FrameLayout
            android:id="@+id/mainFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/mainpagelinearlayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/mainpageButton"
            android:background="@drawable/home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/recipeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/recipe"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:background="@drawable/shop"
            android:id="@+id/shopButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"

            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:background="@drawable/account"
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"

            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />
        <ImageView
            android:background="@drawable/close"
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="#000"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp" />





    </LinearLayout>
</RelativeLayout>